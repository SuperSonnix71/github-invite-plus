# Runtime
NODE_ENV=development
PORT=8787
BASE_URL=http://localhost:8787

# GitHub OAuth App
GITHUB_APP_CLIENT_ID=your_github_client_id
GITHUB_APP_CLIENT_SECRET=your_github_client_secret

# Security / crypto
# 32 bytes, base64-encoded (example: `openssl rand -base64 32`)
TOKEN_ENC_KEY_BASE64=replace_with_base64_32_bytes
# 32+ chars (example: `openssl rand -base64 48`)
SESSION_SECRET=replace_with_long_random_string

# CORS (comma-separated). Use * to allow all origins.
# Example list:
# CORS_ORIGINS=http://localhost:8787,https://github.com,chrome-extension://YOUR_EXTENSION_ID
CORS_ORIGINS=*

# Meilisearch
MEILI_URL=http://localhost:7700
MEILI_MASTER_KEY=dev_master_key_change_me

# Optional webhooks
WEBHOOK_SECRET=

# Polling / indexing / limits
INVITE_POLL_INTERVAL_SECONDS=180
MAX_BLOB_BYTES=512000
MAX_INDEX_FILES_PER_BRANCH=20000
INDEX_CONCURRENCY=6
API_RPM=240

# Optional
COOKIE_DOMAIN=
