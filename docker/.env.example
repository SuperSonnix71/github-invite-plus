# Base Configuration
NODE_ENV=production
BASE_URL=http://your-server-ip:8787

# GitHub App Configuration
# Create a GitHub App at https://github.com/settings/apps
GITHUB_APP_CLIENT_ID=your_github_app_client_id
GITHUB_APP_CLIENT_SECRET=your_github_app_client_secret

# Security Keys
# Generate with: openssl rand -base64 32
TOKEN_ENC_KEY_BASE64=your_base64_encoded_encryption_key_here
SESSION_SECRET=your_session_secret_here_min_32_chars

# CORS Configuration
# Use * for wildcard or specify origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*

# GitHub Webhook Secret (optional but recommended)
WEBHOOK_SECRET=your_webhook_secret_here

# Meilisearch Configuration
# Generate with: openssl rand -base64 32
MEILI_MASTER_KEY=your_meilisearch_master_key_here

# Extension Configuration
# This should match your Chrome extension's redirect URI
EXTENSION_REDIRECT_URI=https://your-extension-id.chromiumapp.org/oauth/callback

# Optional: Cookie Domain (leave empty for default)
COOKIE_DOMAIN=

# Optional: Performance Tuning
INVITE_POLL_INTERVAL_SECONDS=180
MAX_BLOB_BYTES=512000
MAX_INDEX_FILES_PER_BRANCH=20000
INDEX_CONCURRENCY=6
API_RPM=240
